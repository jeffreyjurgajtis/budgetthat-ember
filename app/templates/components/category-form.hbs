<form>
  {{input
    placeholder='Category'
    type='text'
    autocomplete='off'
    class='textfield textfield--long category-name'
    classBinding='nameInvalid:textfield--error'
    focusIn=(action 'resetNameError')
    value=name}}

  {{input 
    placeholder='0.00'
    type='text'
    autocomplete='off'
    class='textfield textfield--align-right'
    classBinding='amountInvalid:textfield--error'
    focusIn=(action 'resetAmountError')
    value=budgetAmount}}

  <button type="submit" class="icon-button">
    {{fa-icon "plus"}}
  </button>
</form>
