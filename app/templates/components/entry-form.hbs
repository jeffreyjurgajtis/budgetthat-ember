<form>
  {{input
    placeholder='YYYY/MM/DD'
    type='text'
    class='textfield textfield--space-bottom entry-occurred-on'
    value=occurredOn}}
  {{input
    placeholder='Description'
    type='text'
    class='textfield textfield--space-bottom textfield--long'
    value=description}}
  {{input
    placeholder='0.00'
    type='text'
    class='textfield textfield--space-bottom textfield--align-right'
    value=amount}}
  <select id='categoryId' class='textfield textfield--space-bottom'>
    {{#each categories as |category|}}
      <option value={{category.id}}>{{category.name}}</option>
    {{/each}}
  </select>
  <button type="submit" class="button button--short">+</button>
</form>
