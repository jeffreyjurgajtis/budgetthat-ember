<form>
  {{pikaday-input
    value=occurredOn
    format="MM/DD/YYYY"
    placeholder="MM/DD/YYYY"
    theme="datepicker"
    classBinding='occurredOnInvalid:textfield--error'
    focusIn=(action 'resetOccurredOnError')
    class='textfield'
    disabled=isDisabled}}
  {{input
    placeholder='Description'
    type='text'
    autocomplete='off'
    class='textfield textfield--long'
    classBinding='descriptionInvalid:textfield--error'
    focusIn=(action 'resetDescriptionError')
    value=description
    disabled=isDisabled}}
  {{input
    placeholder='0.00'
    type='text'
    autocomplete='off'
    class='textfield textfield--align-right'
    classBinding='amountInvalid:textfield--error'
    focusIn=(action 'resetAmountError')
    value=amount
    disabled=isDisabled}}
  <select id='categoryId' class='textfield' disabled={{isDisabled}}>
    {{#each categories as |category|}}
      <option value={{category.id}}>{{category.name}}</option>
    {{/each}}
  </select>
  <button type="submit" class="icon-button" disabled={{isDisabled}}>
    {{fa-icon "plus"}}
  </button>
</form>
